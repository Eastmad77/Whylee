rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================
    // USERS
    // Each authenticated user can read/write only their own record.
    // =====================================================
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // =====================================================
    // ENTITLEMENTS
    // Read-only to the signed-in user. Write access only for Admin SDK.
    // =====================================================
    match /entitlements/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null
                   && request.auth.token.admin == true; // Cloud Functions only
    }

    // =====================================================
    // RECEIPTS
    // Completely private (Admin SDK only).
    // =====================================================
    match /receipts/{id} {
      allow read, write: if false;
    }

    // =====================================================
    // PURCHASE LINKS
    // Used for server-side purchase verification (Admin SDK only).
    // =====================================================
    match /purchaseLinks/{token} {
      allow read, write: if false;
    }

    // =====================================================
    // LEADERBOARD
    // Public read for anyone visiting the app.
    // Signed-in users can write their own score document (matching UID).
    // =====================================================
    match /leaderboard/{docId} {
      // Public read (allows anonymous leaderboard viewing)
      allow read: if true;

      // Only the authenticated user can write their own score
      allow create, update: if request.auth != null
                            && request.resource.data.uid == request.auth.uid;
      allow delete: if false;
    }

    // =====================================================
    // DAILY QUESTIONS
    // Public read for all users.
    // Write access limited to admin (Cloud Functions).
    // =====================================================
    match /daily/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // =====================================================
    // FALLBACK RULE
    // Deny any collection not explicitly listed above.
    // =====================================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
